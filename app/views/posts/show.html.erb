<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  post by <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%=form_with model: [@post, @comment] do |f| %>
  <%= f.text_field :body %>
  <%= f.submit 'Comment' %>
<% end %>
<div id='comment_pane'>
<% @comments.each do |comment| %>
  <%= render 'comments/comment', comment: comment%>
<% end %>
</div>